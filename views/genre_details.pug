extends layout 

block content 
    h1 Genre #{genre.name}

     div(style='margin-left:20px;margin-top:20px; font-size:40px')

        h4 Books 
        
        dl 
            each book in genre_books 
                dt 
                    a(href=genre.url) #{book.title} 
                dd #{book.summary} 
            else 
                p This genre has no books!

